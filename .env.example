############################################
# signal-engine  Environment Configuration #
############################################

# --------------------
# Execution Toggles
# --------------------
# Enable real-time WebSocket ingestion (Helius)
ENABLE_WS=true

# Enable polling-based enrichment (Dexscreener)
ENABLE_DEX=true

# Enable Discord output (set false for dry analysis)
ENABLE_DISCORD=false

# Enable wallet intelligence (Helius)
ENABLE_WALLET=true

# --------------------
# Safety
# --------------------
# If true, engine runs but sends NO Discord messages
DRY_RUN=true

# --------------------
# Scanner Runtime
# --------------------
# Polling interval (seconds)
SCAN_INTERVAL_SECONDS=30

# Base cooldown between alerts per token (seconds)
BASE_COOLDOWN_SECONDS=900

# --------------------
# Repeat / Heating Logic
# --------------------
# Send collapsed repeat every N repeats
COLLAPSE_EVERY=3

# Show ðŸ”¥ after this many repeats
HEATING_UP_AFTER=5

# --------------------
# Pass Escalation
# --------------------
PASS_CONFIRMATIONS=3
PASS_WINDOW_MINUTES=10
PASS_MIN_LIQUIDITY=15000
PASS_MIN_VOL5M=8000

# --------------------
# Auto-mute (anti-spam)
# --------------------
MUTE_AFTER_ALERTS=4
MUTE_WINDOW_MINUTES=15
MUTE_DURATION_MINUTES=60

# --------------------
# Daily Digest (local time if available, UTC fallback)
# --------------------
DIGEST_HOUR_LOCAL=18
DIGEST_MINUTE_LOCAL=0

# --------------------
# Discord Webhooks
# (You can reuse ONE webhook for all if desired)
# --------------------
DISCORD_WEBHOOK_NEAR_PASS=
DISCORD_WEBHOOK_PASS=
DISCORD_WEBHOOK_RUG=
DISCORD_WEBHOOK_LOGS=
DISCORD_WEBHOOK_DIGEST=

# --------------------
# Helius (Required for WS + Wallet)
# --------------------
HELIUS_API_KEY=

############################################
# End of file
############################################
